<section class="hero is-light is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Login</h3>
        <p class="subtitle has-text-grey">Please login to proceed</p>
        <div class="box">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class:"input is-large"  %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <div class="field">
              <div class="control has-icons-left">
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password", class:"input is-large"  %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
              </div>
          </div>

          <div class="field">
            <div class="control">
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </div>
          </div>

          <%= f.submit "Log in", class:"button is-block is-info is-large is-fullwidth" %>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
