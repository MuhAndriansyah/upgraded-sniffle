<dic class="hero is-light is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Forgot Your Password?</h3>
        <div class="box">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
            <div class="field">
              <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder:"Email" %>
              </div>
            </div>
            <%= f.submit "Send me reset password instructions", class:"button is-info is-fullwidth" %>
            <% end  %>
            <br>
              <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</dic>
