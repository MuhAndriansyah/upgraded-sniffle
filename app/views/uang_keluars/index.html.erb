<div class="container" style="margin-top: 95px">
  <div class="columns">
    <div class="column is-one-quarter">
      <%= render :partial => "layouts/sidebar" %>
    </div>
    <div class="column">
      <%= form_tag(uang_keluars_path, method: :get) do %>
      <div class="field has-addons">
        <div class="control">
          <%= link_to '',new_uang_keluar_path, class:'button is-primary fas fa-plus' %>
        </div>
        <div class="control has-icons-left is-expanded">
            <%= text_field_tag :search, params[:search], class:'input' %><span class="icon is-medium is-left"><i class="fa fa-search"></i></span>
                  <span class="icon is-medium is-right">
        </div>
        <div class="control">
            <%= submit_tag 'Search', class:'button is-info' %>
        </div>
      </div>
      <% end %>


      <table class="table is-bordered">
        <thead>
          <tr>
      <th>NO.</th>
       <th>JUMLAH UANG</th>
       <th>TANGGAL</th>
       <th>KETERANGAN</th>
       <th>OPTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% @cari_uang_keluar.each_with_index do |data, index| %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= data.jumlah %></td>
              <td><%= data.tanggal %></td>
              <td><%= data.keterangan%></td>
              <td>
                <%= link_to '', edit_uang_keluar_path(data), class:'button is-primary fas fa-edit' %>
                <%= link_to '', data, method: :delete, data: { confirm: 'Are you sure?' }, class:'button is-danger fas fa-trash' %>
              </td>
            </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
